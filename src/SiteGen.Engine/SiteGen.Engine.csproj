  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SiteGen.PluginSourceGenerator\SiteGen.PluginSourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
