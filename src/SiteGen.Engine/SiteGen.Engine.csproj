    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IncludeSamplePlugins>false</IncludeSamplePlugins>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SiteGen.Engine.Abstractions\SiteGen.Engine.Abstractions.csproj" />
    <ProjectReference Include="..\SiteGen.Config\SiteGen.Config.csproj" />
    <ProjectReference Include="..\SiteGen.Content\SiteGen.Content.csproj" />
    <ProjectReference Include="..\SiteGen.Rendering\SiteGen.Rendering.csproj" />
    <ProjectReference Include="..\SiteGen.Routing\SiteGen.Routing.csproj" />
    <ProjectReference Include="..\SiteGen.Shared\SiteGen.Shared.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IncludeSamplePlugins)' == 'true'">
